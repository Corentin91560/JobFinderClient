<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SearchCriteriaFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorbakcground"

        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonTag"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colortext"
            android:gravity="center_vertical"
            android:text="   Tag Criteria"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonEnterprise" />

        <Button
            android:id="@+id/buttonJob"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colortext"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical"
            android:text="   Job Criteria"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView8" />

        <Button
            android:id="@+id/buttonEnterprise"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colortext"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical"
            android:text="   Enterprise Criteria"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonJob" />

        <TextView
            android:id="@+id/textView8"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/colortext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Search Criteria"
 />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>